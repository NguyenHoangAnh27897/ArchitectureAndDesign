
@{
    ViewBag.Title = "AddResumes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-md-offset-2">
                <div class="page-ads box">
                    <div class="post-header">
                        <p>Already have an account? <a href="my-account.html">Click here to login</a></p>
                    </div>
                    <form class="form-ad">
                        <div class="divider"><h3>Basic information</h3></div>
                        <div class="form-group is-empty">
                            <label class="control-label" for="textarea">FullName</label>
                            <input type="text" class="form-control" placeholder="Name">
                            <span class="material-input"></span><span class="material-input"></span>
                        </div>
                        <div class="form-group is-empty">
                            <label class="control-label" for="textarea"></label>
                            <label class="control-label" for="textarea">Email</label>
                            <input type="text" class="form-control" placeholder="Your@domain.com">
                            <span class="material-input"></span><span class="material-input"></span>
                        </div>
                        <div class="form-group is-empty">
                            <label class="control-label" for="textarea">Phone Number</label>
                            <input type="text" class="form-control" placeholder="Phone Number">
                            <span class="material-input"></span><span class="material-input"></span>
                        </div>
                        <div class="form-group is-empty">
                            <label class="control-label" for="textarea">Address	</label>
                            <input type="text" class="form-control" placeholder="Address">
                            <span class="material-input"></span><span class="material-input"></span>
                        </div>
                        <div class="form-group is-empty">
                            <label class="control-label" for="textarea">Date Of Birth</label>
                            <input type="datetime-local" class="form-control" placeholder="Date Of Birth">
                            <span class="material-input"></span><span class="material-input"></span>
                        </div>
                        <div class="form-group is-empty">
                            <label class="control-label" for="textarea">Position</label>
                            <input type="text" class="form-control" placeholder="Position">
                            <span class="material-input"></span><span class="material-input"></span>
                        </div>
                        <div class="form-group is-empty">
                            <label class="control-label" for="textarea">FileAttach</label>
                            <input type="text" class="form-control" placeholder="FileAttach">
                            <span class="material-input"></span><span class="material-input"></span>
                        </div>
                    </form>
                    <a href="resume.html" class="btn btn-common">Save</a>
                </div>
            </div>
        </div>
    </div>
</section>

