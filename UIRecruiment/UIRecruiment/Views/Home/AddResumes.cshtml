
@{
    ViewBag.Title = "AddResumes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-md-offset-2">
                <div class="page-ads box">
                    <div class="post-header">
                        <p>Already have an account? <a href="my-account.html">Click here to login</a></p>
                    </div>
                    <div class="form-ad">
                        <div class="divider"><h3>Basic information</h3></div>
                        <div class="form-group is-empty">
                            <label class="control-label" for="textarea">FullName</label>
                            <input type="text" name="username" class="form-control" placeholder="Name" required>
                            <span class="material-input"></span><span class="material-input"></span>
                        </div>
                        <div class="form-group is-empty">
                            <label class="control-label" for="textarea">Email</label>
                            <input type="text" name="email" class="form-control" placeholder="Your@domain.com" required>
                            <span class="material-input"></span><span class="material-input"></span>
                        </div>
                        <div class="form-group is-empty">
                            <label class="control-label" for="textarea">Phone Number</label>
                            <input type="tel" name="phone" class="form-control" placeholder="Phone Number" required>
                            <span class="material-input"></span><span class="material-input"></span>
                        </div>
                        <div class="form-group is-empty">
                            <label class="control-label" for="textarea">Address	</label>
                            <input type="text" name="address" class="form-control" placeholder="Address" required>
                            <span class="material-input"></span><span class="material-input"></span>
                        </div>
                        <div class="form-group is-empty">
                            <label class="control-label" for="textarea">Date Of Birth</label>
                            <input type="datetime-local" name="birthday" class="form-control" placeholder="Date Of Birth" required>
                            <span class="material-input"></span><span class="material-input"></span>
                        </div>
                        <div class="form-group is-empty">
                            <label class="control-label" for="textarea">Position</label>
                            <input type="text" name="position" class="form-control" placeholder="Position" required>
                            <span class="material-input"></span><span class="material-input"></span>
                        </div>
                        <div class="form-group is-empty">
                            <label class="control-label" for="textarea">FileAttach</label>
                            <input type="text" name="FileAttach" class="form-control" placeholder="FileAttach" required>
                            <span class="material-input"></span><span class="material-input"></span>
                        </div>
                    </div>
                    <button id="save" class="btn btn-common">Save</button>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    var $user = $('input[name=username]'),
        $email = $('input[name=email]'),
        $phone = $('input[name=phone]'),
        $address = $('input[name=address]'),
        $birthday = $('input[name=birthday]'),
        $position = $('input[name=position]'),
        $FileAttach = $('input[name=FileAttach]'),
        $save = $('button#save'), data;
    $save.click(function () {
        data = {
            username: $user.val(),
            email: $email.val(),
            phone: $phone.val(),
            address: $address.val(),
            birthday: $birthday.val(),
            position: $position.val(),
            FileAttach: $FileAttach.val()
        }
        $.ajax({
            type: "Post",
            url: "http://localhost:25888/Resume/AddResume", // Controller method Post
            dataType: "json",
            data: data,
            success: function (data) {
                alert(data); ///Json Data 
            },
            error: function (err) {
                alert('No Valid Data');
            }
        });
    });
</script>

