            <a class="active" href="/Home/ViewList" style="color:red">
                <strong> Manage Applicator </strong> <i class="fa fa-angle-down"></i>
            </a>
        </li>
        <li class="drop">
            <a class="active" href="/Home/ViewListEmployers" style="color:red">
                <strong> Manage Employers</strong>  <i class="fa fa-angle-down"></i>
            </a>

        </li>
    </ul>

</div>
<br />
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-9">
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Full Name</th>
                                    <th>Date Of Birth</th>
                                    <th class="text-right">Phone number</th>
                                    <th class="text-right">Email</th>
                                    <th class="text-right">Position</th>
                                    <th class="text-right">Address</th>
                                    <th class="text-right">FileAttach</th>
                                </tr>
                            </thead>
                            <tbody id="tbody"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var $tbody = $('tbody#tbody');
        function resource(data) {
            var human = `<tr>
                        <td>${data.ID}</td>
                        <td>${data.FullName}</td>
                        <td>${data.DayofBirth}</td>
                        <td class ="text-right">${data.PhoneNumber}</td>
                        <td class ="text-right">${data.Email}</td>
                        <td class ="text-right">${data.ApplyPosition}</td>
                        <td class ="text-right">${data.DateofApplication}</td>
                        <td class ="text-right">${data.FileAttach}</td>
                    </tr>`;
            return human;
        }
        $.ajax({
            url: 'http://localhost:25888/api/recruiment',
            method: 'Get',
            dataType: 'json',
            success: function(data) {
                for(var ie in data) {
                    $tbody.append(resource(data[ie]));
                }
            },
            err: function(e) {
                alert('No Valid');
            }
        });
    });
</script>


